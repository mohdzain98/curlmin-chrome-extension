{
  "manifest_version": 3,
  "name": "Curlmin",
  "version": "1.0",
  "description": "Curlmin is an advanced URL shortening and management platform designed to make sharing links faster, smarter, and more efficient.",
  "permissions": ["storage", "activeTab","tabs"],
  "host_permissions": ["https://api.curlmin.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Curlmin"
  },
  "icons": {
    "16": "favicon-16x16.png",
    "32": "favicon-32x32.png"
  }
}
